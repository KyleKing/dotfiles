{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "p:white",
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": "{{ .Parent }}<p:blue>{{ .Path }}</> ",
          "type": "path"
        },
        {
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:red{{ end }}",
            "{{ if gt .Ahead 0 }}p:orange{{ end }}",
            "{{ if gt .Behind 0 }}p:grey{{ end }}"
          ],
          "properties": {
            "branch_max_length": 15,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": "\ue5fd"
          },
          "style": "plain",
          "template": "{{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}",
          "type": "git"
        },
        {
          "foreground": "p:blue",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " {{ if gt .Code 0 }}({{ .Code }}) \uf00d{{ else }}>{{ end }}",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "segments": [
        {
          "background": "transparent",
          "foreground": "p:blue",
          "properties": {
            "display_error": false
          },
          "style": "plain",
          "template": "\ufd31 {{.Context}}{{if .Namespace}}::{{.Namespace}}{{end}} ",
          "type": "kubectl"
        },
        {
          "background": "transparent",
          "foreground": "p:red",
          "properties": {
            "display_error": true,
            "display_mode": "files",
            "fetch_package_manager": false,
            "home_enabled": false
          },
          "style": "plain",
          "template": "\uf898 {{ .Full }} {{ end }}",
          "type": "node"
        },
        {
          "background": "transparent",
          "foreground": "p:yellow",
          "properties": {
            "display_error": true,
            "display_mode": "files",
            "fetch_version": true,
            "fetch_virtual_env": false
          },
          "style": "plain",
          "template": "\ue235 {{ .Full }} ",
          "type": "python"
        },
        {
          "background": "transparent",
          "foreground": "p:white",
          "properties": {
            "display_error": true
          },
          "style": "plain",
          "template": "{{ if .Name }}in {{ .Name }}{{ if .Version }}(<p:blue><b>{{.Version}}</b></>) {{ end }}",
          "type": "project"
        },
        {
          "background": "transparent",
          "foreground": "p:white",
          "style": "plain",
          "template": "at <p:blue><b>{{ .CurrentDate | date \"15:04:05\" }}</b></>",
          "type": "time"
        }
      ],
      "type": "rprompt"
    }
  ],
  "console_title_template": "{{ .Folder }}",
  "final_space": true,
  "palette": {
    "black": "#2A2F3E",
    "blue": "#02bcce",
    "green": "#8FD15A",
    "grey": "#A8B0D9",
    "orange": "#E8AE5A",
    "red": "#FF6F92",
    "white": "#E0DEF4",
    "yellow": "#FEAC00"
  },
  "version": 2
}

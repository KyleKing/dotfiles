# Sourced once before ~/.zshrc - https://unix.stackexchange.com/a/487889

# Add sbin from homebrew
export PATH="/usr/local/sbin:$PATH"

# Created by `pipx`
export PATH="$PATH:/Users/kyleking/.local/bin"

# Added from rustup-init (rust installer)
source "$HOME/.cargo/env"

# # Export Preview Gitkrakken CLI
# export _GK_DIR=/Applications/GitKraken.app/Contents/Resources/app.asar.unpacked/resources/cli/unix
# export PATH="$_GK_DIR:$PATH"

# Source User Configuration Files
export MY_CONFIG=$HOME/.config/my_config

# Set bat as default Pager (instead of less)
export PAGER=bat

# Load pyenv PATH configuration
eval "$(pyenv init --path)"

source $MY_CONFIG/on_login.sh

# yadm configuration variables
# Set AWS Roles per environment. See available options when logging into AWS from Okta
export SAML2AWS_ROLE_DEV=Backend_API_Engineer_Analytics
export SAML2AWS_ROLE_STAGE=Principal_Software_Engineer
export SAML2AWS_ROLE_PROD=Backend_API_Engineer_Analytics
